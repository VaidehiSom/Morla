<?xml version='1.0'?>

<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find robot)/urdf/robot.gazebo" />

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <link name='robot_footprint'> </link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="morla_chassis" />
  </joint>

  <link name='morla_chassis'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="2"/>
      <origin xyz="0 0 0" rpy=" 1.5707 0 1.5707"/>
      <inertia
          ixx="0.004889713" ixy="0" ixz="0"
          iyy="0.004008093" iyz="0.000240565"
          izz="0.008040018"
      />
    </inertial>

    <collision name='chassis_collision'>
      <origin xyz="0 0 0" rpy=" 1.5707 0 1.5707"/>
      <geometry>
        <!--<box size="1.0 1.0 1.0"/>-->
        <mesh filename="package://morla/meshes/morlaChassis.dae"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 1.5707 0 1.5707"/>
      <geometry>
        <mesh filename="package://morla/meshes/morlaChassis.dae"/>
      </geometry>
    </visual>
  </link>
  
  <link name='left_wheel'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="5.35"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.000225" ixy="0" ixz="0"
          iyy="0.000225" iyz="0"
          izz="0.0004375"
      />
    </inertial>

    <collision name='left_wheel_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.034" length="0.028"/>
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.034" length="0.028"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>
    
  
  <link name='right_wheel'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="5.35"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.000225" ixy="0" ixz="0"
          iyy="0.000225" iyz="0"
          izz="0.0004375"
      />
    </inertial>

    <collision name='right_wheel_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.034" length="0.028"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.034" length="0.028"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>
  
  <link name='omni_wheel'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="0.35"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.0056" ixy="0" ixz="0"
          iyy="0.0056" iyz="0"
          izz="0.0056"
      />
    </inertial>

    <collision name='omni_wheel_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.058"/>
      </geometry>
    </collision>

    <visual name='omni_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.058"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

<!-- links for sensors -->

